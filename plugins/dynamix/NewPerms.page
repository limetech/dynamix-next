<script>
function setNewPerms(form) {
  var dirs = '';
  for (var i=1,item; item=form.includeDisk.options[i]; i++) {
    if (item.selected) {
      if (dirs.length) dirs += '|';
      dirs += item.value;
    }
  }
  for (var i=1,item; item=form.includeShare.options[i]; i++) {
    if (item.selected) {
      if (dirs.length) dirs += '|';
      dirs += item.value;
    }
  }
